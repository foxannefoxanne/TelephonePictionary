<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.telephone_pictionary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Explanation"
            android:label="@string/title_activity_explanation" >
        </activity>
        <activity
            android:name=".Connect"
            android:label="@string/title_activity_connect" >
        </activity>
        <activity
            android:name=".CanvasDrawer"
            android:label="@string/title_activity_canvas_drawer" >
        </activity>
        <activity
            android:name=".CanvasWriter"
            android:label="@string/title_activity_canvas_writer" >
        </activity>
        <activity
            android:name=".CardViewer"
            android:label="@string/title_activity_card_viewer" >
        </activity>
        <activity
            android:name=".EndGame"
            android:label="@string/title_activity_end_game" >
        </activity>
        <activity
            android:name=".CardFragment"
            android:label="@string/title_activity_card_fragment" >
        </activity>
        <activity
            android:name=".HostGame"
            android:label="@string/title_activity_host_game" >
        </activity>
        <activity
            android:name=".JoinGame"
            android:label="@string/title_activity_join_game" >
        </activity>
    </application>

</manifest>
